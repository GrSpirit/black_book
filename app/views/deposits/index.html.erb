<p id="notice"><%= notice %></p>

<h1>Deposits</h1>

<table class="table table-hover">
  <thead>
    <tr class="thead-dark">
      <th scope="col">Bank</th>
      <th scope="col">Date start</th>
      <th scope="col">Date end</th>
      <th scope="col">Amount</th>
      <th scope="col">Percent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deposits.each do |deposit| %>
      <tr>
        <td><%= deposit.bank %></td>
        <td><%= deposit.date_start %></td>
        <td><%= deposit.date_end %></td>
        <td><%= deposit.amount %></td>
        <td><%= deposit.percent %></td>
        <td><%= link_to 'Show', deposit, class: "badge badge-info text-white" %></td>
        <td><%= link_to 'Edit', edit_deposit_path(deposit), class: "badge badge-secondary text-white" %></td>
        <td><%= link_to 'Destroy', deposit, method: :delete, data: { confirm: 'Are you sure?' }, class: "badge badge-danger text-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deposit', new_deposit_path, class: "btn btn-primary text-light" %>
